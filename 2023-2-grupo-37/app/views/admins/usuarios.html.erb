<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Proyecto Grupo 37</title>
  </head>
  <body>
    <%= render 'shared/header' %>
    <main>
        <div class="div-botones-admin">
                <a href="/admin/productos">
                    <button>
                        Mostrar Productos
                        <div class="arrow-wrapper">
                            <div class="arrow"></div>
                        </div>
                    </button>
                </a>

                <a href="/admin/usuarios">
                    <button class="selected">
                        Mostrar Usuarios
                        <div class="arrow-wrapper">
                            <div class="arrow"></div>
                        </div>
                    </button>
                </a>

                <a href="/admin/intercambios">
                    <button>
                        Mostrar Intercambios
                        <div class="arrow-wrapper">
                            <div class="arrow"></div>
                        </div>
                    </button>
                </a>

                <a href="/admin/reportes">
                    <button>
                        Mostrar Reportes
                        <div class="arrow-wrapper">
                            <div class="arrow"></div>
                        </div>
                    </button>
                </a>
        </div>
        
        <section class="element-admin">
            <% if @users.count > 0 %>
                <% @users.each do |user| %>
                    <% if !user.admin %>
                        <div class="elements-admin">
                            <h2> Usuario: <%= user.name %></h2>
                            <p> Email: <%= user.email %></p>
                            <div class="div-botones-admin-2">
                                <%= button_to 'Editar', editar_usuario_path(user.id), method: :get %>
                                <%= button_to 'Eliminar', eliminar_usuario_path(user.id), method: :get %>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            <% else %>
                <div class="btn">NO HAY USUARIOS REGISTRADOS</div>
            <% end %>
        </section>
    </main>x