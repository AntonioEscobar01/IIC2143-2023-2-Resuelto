<body>
  <%= render 'shared/header' %>
    <main>
      <div class="fondo_forms">
        <div class="Bienvenida">
            <h1>Editar Usuario</h1>
        </div>
        <%= form_with url: "/usuarios/#{@user.id}", model: @user, method: :patch do |form|%>
          <div class="divform">
            <div>
              <input type="text" id="name" name="user[name]" 
              placeholder="Nombre" class="input" value="<%= @user.name %>">
            </div>
            
            <div>
              <%= form.label :remove_image %>
              <%= form.check_box :remove_image %>
            </div>

            <button type="submit" class="custom-button">
              Actualizar
              <div class="arrow-wrapper">
                <div class="arrow"></div>
              </div>
            </button>
          </div>
        <% end %>
      </div>
    </main>
</body>